header.headerOne
  nav.headerOne__nav.nav--tours
    a.headerOne__nav__el(href='/') Home
  nav.headerOne__nav.nav--user
    if user
      //- a.nav__el(href='/cart') Cart
      a.headerOne__nav__el.nav__el--logout Log out
      a.headerOne__nav__el(href='/me')
        img.headerOne__nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
        span= user.name.split(' ')[0]
    else
      a.headerOne__nav__el(href='/login') Log in
      a.headerOne__nav__el.headerOne__nav__el--cta(href='/signup') Sign up

    